<Window x:Class="TestWPF.CadastroEdicao"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWPF"
        mc:Ignorable="d"
        Title="Cadastro" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="Id" IsReadOnly="True" HorizontalAlignment="Left" Margin="268,88,0,0" TextWrapping="Wrap" Text="Id" VerticalAlignment="Top" Width="237" Height="35" FontSize="24" IsReadOnlyCaretVisible="True" FontFamily="Arial Black"/>
        <TextBox x:Name="Nome" HorizontalAlignment="Left" Margin="268,157,0,0" TextWrapping="Wrap" Text="Nome" VerticalAlignment="Top" Width="237" Height="35" FontSize="24" MaxLength="30"/>
        <TextBox x:Name="Sobrenome" HorizontalAlignment="Left" Margin="268,231,0,0" TextWrapping="Wrap" Text="Sobrenome" VerticalAlignment="Top" Width="237" Height="35" FontSize="24" MaxLength="30"/>
        <TextBox x:Name="Telefone" HorizontalAlignment="Left" Margin="268,295,0,0" TextWrapping="Wrap" Text="Telefone" VerticalAlignment="Top" Width="237" Height="35" FontSize="24" MaxLength="20"/>
        <Button Content="Salvar" HorizontalAlignment="Left" Margin="314,360,0,0" VerticalAlignment="Top" Height="37" Width="145" FontSize="24" Click="Save"/>
    </Grid>
</Window>
